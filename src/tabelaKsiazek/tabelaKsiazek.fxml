<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tabelaKsiazek.TabelaKsiazek">
   <children>
      <TableView fx:id="tabelaKsiazka" layoutX="52.0" layoutY="38.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
          <TableColumn fx:id="idTab" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="tytulTab" prefWidth="75.0" text="Tytuł" />
            <TableColumn fx:id="autorTab" prefWidth="75.0" text="Autor" />
            <TableColumn fx:id="wydawcaTab" prefWidth="75.0" text="Wydawca" />
            <TableColumn fx:id="dostepnaTab" prefWidth="75.0" text="Dostępna" />
            <TableColumn fx:id="cenaTab" prefWidth="75.0" text="Cena" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu fx:id="pokUsuwania">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#usuwanie" text="Usuń" />
                  <MenuItem mnemonicParsing="false" onAction="#edytowanie" text="Edytuj" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
      <AnchorPane fx:id="edytowanie" disable="true" prefHeight="400.0" prefWidth="403.0">
         <children>
            <VBox prefHeight="328.0" prefWidth="794.0">
               <children>
                  <JFXTextField fx:id="tytul" prefHeight="5.0" prefWidth="403.0" promptText="Tytuł">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="autor" promptText="Autor">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="wydawca" promptText="Wydawca">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="cena" promptText="Cena">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <JFXButton onAction="#aktualizuj" prefHeight="59.0" prefWidth="274.0" stylesheets="@../dodawanieKsiazki/dodajksiazke.css" text="Edytuj">
                           <HBox.margin>
                              <Insets left="110.0" top="15.0" />
                           </HBox.margin>
                        </JFXButton>
                        <JFXButton layoutX="25.0" layoutY="25.0" onAction="#anuluj" prefHeight="59.0" prefWidth="274.0" stylesheets="@../dodawanieKsiazki/dodajksiazke.css" text="Wróć">
                           <HBox.margin>
                              <Insets left="15.0" top="15.0" />
                           </HBox.margin>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>

   </children>
</AnchorPane>
